{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/graph_rag.sh session_start"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/graph_rag.sh task_augment",
            "_comment": "Auto-enriches Task prompts containing [[concepts]] with graph context"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/prompt_sync.sh",
            "_comment": "Optional: Auto-sync before processing prompts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop_sync.sh",
            "_comment": "Optional: Save discoveries and sync after completion"
          }
        ]
      }
    ]
  }
}
